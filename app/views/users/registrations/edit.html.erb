<h2>マイページ編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="generic-form">
      <%= render "users/shared/error_messages", resource: resource %>
      <%= render "form", f: f %>
      <div class="actions">
        <%= f.submit "更新",class:"btn " %>
        <%= link_to "キャンセル",user_path(current_user) ,class:"btn" %>
      </div>
    <% end %>
  </div>
  <p><%= button_to "退会する", registration_path(resource_name), data: { confirm: "Are you sure?" },class:"btn" ,method: :delete %></p>


